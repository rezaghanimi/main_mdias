<odoo>
    <data>

        <record model="ir.ui.view" id="metro_park_interlock_import_wizard_form">
            <field name="name">联锁表</field>
            <field name="model">metro_park.interlock.import_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="location">location</label>
                        <div class="col-sm-3">
                            <field name="location"
                                   options="{'no_open': True, 'no_create_edit': True}"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="interlock_file">interlock_file</label>
                        <div class="col-sm-4">
                            <field widget="binary" name="interlock_file" filename="file_name" />
                        </div>
                    </div>

                     <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="file_name">file_name</label>
                        <div class="col-sm-3">
                            <field name="file_name" attrs="{'disabled': True}" />
                        </div>
                    </div>

                    <footer>
                        <button type="object"
                                name="on_import_inter_lock_file"
                                class="btn btn_primary"
                                text="导入" />
                         <button special="cancel"
                                 class="btn btn_secondary"
                                 text="取消" />
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="metro_park_interlock_import_wizard_act_window">
            <field name="name">联锁表导入向导</field>
            <field name="res_model">metro_park.interlock.import_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
    