<odoo>
    <data>

        <record model="ir.ui.view" id="metro_park_interlock_hostile_signal_list">
            <field name="name">信号机</field>
            <field name="model">metro_park.interlock.hostile_signal</field>
            <field name="arch" type="xml">
                <tree js_class="fnt_table">
                    <field name="index"/>
                    <field name="content"/>
                    <field name="switch_ids"/>
                    <field name="route_id"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="metro_park_interlock_hostile_signal_form">
            <field name="name">信号机</field>
            <field name="model">metro_park.interlock.hostile_signal</field>
            <field name="arch" type="xml">
                <form>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="index">index</label>
                        <div class="col-sm-10">
                            <field name="index"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="content">content</label>
                        <div class="col-sm-10">
                            <field name="content"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="switch_ids">switch_ids</label>
                        <div class="col-sm-10">
                            <field name="switch_ids"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="train_route_id">train_route_id</label>
                        <div class="col-sm-10">
                            <field name="train_route_id"/>
                        </div>
                    </div>

                </form>
            </field>
        </record>


        <record model="ir.actions.act_window" id="metro_park_interlock_hostile_signal_act_window">
            <field name="name">信号机</field>
            <field name="res_model">metro_park.interlock.hostile_signal</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    