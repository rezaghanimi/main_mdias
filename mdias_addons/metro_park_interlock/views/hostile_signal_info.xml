
<odoo>
    <data>
        
        <record model="ir.ui.view" id="interlock_table.hostile_signal_info_list">
            <field name="name">敌对信号</field>
            <field name="model">interlock_table.hostile_signal_info</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="condition_reverse"/>
                    <field name="condition"/>
                    <field name="signal"/>
                </tree>
            </field>
        </record>

        
        <record model="ir.ui.view" id="interlock_table.hostile_signal_info_form">
            <field name="name">敌对信号表单</field>
            <field name="model">interlock_table.hostile_signal_info</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="condition_reverse">condition_reverse</label>
                        <div class="col-sm-10">
                            <field name="condition_reverse"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="condition">condition</label>
                        <div class="col-sm-10">
                            <field name="condition"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="signal">signal</label>
                        <div class="col-sm-10">
                            <field name="signal"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        
        <record model="ir.actions.act_window" id="interlock_table.hostile_signal_info_act_window">
            <field name="name">敌对信息</field>
            <field name="res_model">interlock_table.hostile_signal_info</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>


    