
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_dispatch.real_time_table_list">
            <field name="name">实际运行图</field>
            <field name="model">metro_park_dispatch.real_time_table</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="time_table"/>
                    <field name="date"/>
                    <field name="remark"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="metro_park_dispatch.real_time_table_form">
            <field name="name">实际运行图</field>
            <field name="model">metro_park_dispatch.real_time_table</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="time_table">time_table</label>
                        <div class="col-sm-10">
                            <field name="time_table"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="date">date</label>
                        <div class="col-sm-10">
                            <field name="date"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="remark">remark</label>
                        <div class="col-sm-10">
                            <field name="remark"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window"
                id="metro_park_dispatch.real_time_table_act_window">
            <field name="name">实际运行图</field>
            <field name="res_model">metro_park_dispatch.real_time_table</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>


    