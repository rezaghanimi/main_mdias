
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_dispatch.run_train_wizard_list">
            <field name="name">设置运营车</field>
            <field name="model">metro_park_dispatch.run_train_wizard</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="work_shop_day_plan_id"/>
                </tree>
            </field>
        </record>

        
        <record model="ir.ui.view" id="metro_park_dispatch.run_train_wizard_form">
            <field name="name">运营车设置向导</field>
            <field name="model">metro_park_dispatch.run_train_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="work_shop_day_plan_id">work_shop_day_plan_id</label>
                        <div class="col-sm-10">
                            <field name="work_shop_day_plan_id" attrs="{'readonly': True}"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="cur_trains">cur_trains</label>
                        <div class="col-sm-10">
                            <field name="cur_trains"
                                   context="{'tree_view_ref': 'metro_park_dispatch.cur_train_manage_pop_list'}">
                                <tree js_class="fnt_table" options="{'height': '300'}">
                                    <field name="train_no" />
                                    <field name="train_type" />
                                    <field name="cur_location" />
                                    <field name="train_status" />
                                </tree>
                            </field>
                        </div>
                    </div>

                    <footer>
                        <button class="btn btn-success" type="object" name="on_ok" text="确定" />
                        <button class="btn btn-info" text="取消" special="cancel" />
                    </footer>

                </form>
            </field>
        </record>

        <record model="ir.actions.act_window"
                id="metro_park_dispatch.run_train_wizard_act_window">
            <field name="name">设置运营车</field>
            <field name="res_model">metro_park_dispatch.run_train_wizard</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    