
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_dispatch.nor_time_table_config_list">
            <field name="name">运行图配置</field>
            <field name="model">metro_park_dispatch.nor_time_table_config</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="day_type"/>
                    <field name="time_table" width="200"/>
                    <field name="write_date" width="200" string="更新日期" />
                    <field name="widget_place_holder"
                           widget="template_widget"
                           options="{'template': 'time_table_config.buttons'}" width="300" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="metro_park_dispatch.nor_time_table_config_form">
            <field name="name">运行图配置</field>
            <field name="model">metro_park_dispatch.nor_time_table_config</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="day_type">day_type</label>
                        <div class="col-sm-10">
                            <field name="day_type"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="time_table">time_table</label>
                        <div class="col-sm-10">
                            <field name="time_table"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="metro_park_dispatch.nor_time_table_config_act_window">
            <field name="name">运行图配置</field>
            <field name="res_model">metro_park_dispatch.nor_time_table_config</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- 运行图配置  -->
        <record id="time_table_config_action" model="ir.actions.client">
            <field name="name">运行图配置</field>
            <field name="tag">time_table_config_action</field>
            <field name="target">main</field>
        </record>

        <!-- 运行图日历 -->
        <menuitem action="time_table_config_action"
            id="metro_park_dispatch.time_table_config_menu"
            name="运行图配置"
            sequence="2"
            parent="metro_park_dispatch.menu_time_table_root"
            groups="group_dispatch_car_management_dispatch_run_diagram_manage"/>

    </data>
</odoo>


    