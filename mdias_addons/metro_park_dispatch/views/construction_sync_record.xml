
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_dispatch.construction_sync_record_list">
            <field name="name">同步记录</field>
            <field name="model">metro_park_dispatch.construction_sync_record</field>
            <field name="arch" type="xml">
                <tree js_class="fnt_table" options="{'height': '240'}">
                    <field name="no"/>
                    <field name="sync_tm"/>
                    <field name="syn_method"/>
                    <field name="syn_result"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="metro_park_dispatch.construction_sync_record_form">
            <field name="name">同步记录查看</field>
            <field name="model">metro_park_dispatch.construction_sync_record</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="no">no</label>
                        <div class="col-sm-10">
                            <field name="no"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="sync_tm">sync_tm</label>
                        <div class="col-sm-10">
                            <field name="sync_tm"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="syn_method">syn_method</label>
                        <div class="col-sm-10">
                            <field name="syn_method"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="syn_result">syn_result</label>
                        <div class="col-sm-10">
                            <field name="syn_result"/>
                        </div>
                    </div>
                    
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="metro_park_dispatch.construction_sync_record_act_window">
            <field name="name">construction_sync_record</field>
            <field name="res_model">metro_park_dispatch.construction_sync_record</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    