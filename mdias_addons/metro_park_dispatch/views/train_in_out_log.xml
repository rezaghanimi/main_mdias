<odoo>
    <data>

        <record model="ir.ui.view" id="metro_park_dispatch.train_in_out_log_list">
            <field name="name">收发车计划日志</field>
            <field name="model">metro_park_dispatch.train_in_out_log</field>
            <field name="arch" type="xml">
                <tree create="0"
                      edit="0"
                      js_class="fnt_table"
                      options="{'height': 'full-300'}"
                      search_ex_template="metro_park_dispatch.train_back_plan_search_record">
                    <field name="create_date" string="时间"/>
                    <field name="type"/>
                    <field name="train_dev"/>
                    <field name="operation"/>
                    <field name="result"/>
                    <field name="create_date" string="时间"/>
                    <field name="create_uid" string="操作账户"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="metro_park_dispatch.train_in_out_log_form">
            <field name="name">收发车计划日志</field>
            <field name="model">metro_park_dispatch.train_in_out_log</field>
            <field name="arch" type="xml">
                <form>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="type">type
                        </label>
                        <div class="col-sm-10">
                            <field name="type"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="train_dev">train_dev
                        </label>
                        <div class="col-sm-10">
                            <field name="train_dev"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="operation">operation
                        </label>
                        <div class="col-sm-10">
                            <field name="operation"/>
                        </div>
                    </div>

                </form>
            </field>
        </record>

        <record model="ir.actions.act_window"
                id="metro_park_dispatch.train_in_out_log_act_window">
            <field name="name">收发车计划日志</field>
            <field name="res_model">metro_park_dispatch.train_in_out_log</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="metro_park_dispatch.train_in_out_log_act_window"
                  id="metro_park_dispatch.train_in_out_log_menu"
                  name="计划日志"
                  parent="metro_park_dispatch.menu_root"
                  groups="category_plan_log"/>

    </data>
</odoo>
    