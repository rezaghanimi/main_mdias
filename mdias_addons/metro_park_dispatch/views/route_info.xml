
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_maintenance.route_info_list">
            <field name="name">进路信息</field>
            <field name="model">metro_park_dispatch.route_info</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="index"/>
                    <field name="route"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="metro_park_maintenance.route_info_form">
            <field name="name">进路信息</field>
            <field name="model">metro_park_dispatch.route_info</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="index">index</label>
                        <div class="col-sm-10">
                            <field name="index"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="route">route</label>
                        <div class="col-sm-10">
                            <field name="route"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="state">state</label>
                        <div class="col-sm-10">
                            <field name="state"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="metro_park_maintenance.route_info_act_window">
            <field name="name">进路信息</field>
            <field name="res_model">metro_park_dispatch.route_info</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    