
<odoo>
    <data>
        
        <record model="ir.ui.view"
                id="metro_park_dispatch.work_shop_day_plan_list">
            <field name="name">车间日生产计划</field>
            <field name="model">metro_park_dispatch.work_shop_day_plan</field>
            <field name="arch" type="xml">
                <tree js_class="fnt_table" options="{'height': 'full-270'}" create="0" edit="0">
                    <field name="plan_date" string="日期" width="150"/>
                    <field name="state" string="状态"/>
                    <field name="btns"
                           widget="template_widget"
                           options="{'template': 'day_run_plan_btns'}"
                           width="250" />
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view"
                id="metro_park_dispatch.work_shop_day_plan_form">
            <field name="name">车间日生产计划</field>
            <field name="model">metro_park_dispatch.work_shop_day_plan</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="state">state</label>
                        <div class="col-sm-10">
                            <field name="state"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="plan_date">plan_date</label>
                        <div class="col-sm-10">
                            <field name="plan_date"/>
                        </div>
                    </div>
                    
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window"
                id="metro_park_dispatch.work_shop_day_plan_act_window">
            <field name="name">车间日生产计划</field>
            <field name="res_model">metro_park_dispatch.work_shop_day_plan</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="metro_park_dispatch.work_shop_day_plan_act_window"
                  id="metro_park_dispatch.work_shop_day_plan_menu"
                  name="车间日生产计划"
                  parent="metro_park_dispatch.menu_root"
                  groups="category_workshop_day_plan_plan"/>
    </data>
</odoo>
    