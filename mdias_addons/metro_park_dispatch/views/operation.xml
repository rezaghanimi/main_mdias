
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_dispatch.operation_list">
            <field name="name">操作列表</field>
            <field name="model">metro_park_dispatch.operation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="metro_park_dispatch.operation_form">
            <field name="name">操作</field>
            <field name="model">metro_park_dispatch.operation</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="name">name</label>
                        <div class="col-sm-10">
                            <field name="name"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="metro_park_dispatch.operation_act_window">
            <field name="name">操作</field>
            <field name="res_model">metro_park_dispatch.operation</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
