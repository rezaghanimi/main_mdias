
<odoo>
    <data>

        <record model="ir.ui.view" id="metro_park_dispatch.chose_pos_wizard_list">
            <field name="name">位置选择向导</field>
            <field name="model">metro_park_dispatch.chose_pos_wizard</field>
            <field name="arch" type="xml">
                <tree>
                   <field name="train_id" readonly="1" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="metro_park_dispatch.chose_pos_wizard_form">
            <field name="name">收车位置选择向导</field>
            <field name="model">metro_park_dispatch.chose_pos_wizard</field>
            <field name="arch" type="xml">
                <form>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="train_id">train_id</label>
                        <div class="col-sm-10">
                            <field name="train_id" readonly="1" force_save="1"
                                   options="{'no_create_edit': True, 'no_open': True, 'no_create':True}"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="start_rail">start_rail</label>
                        <div class="col-sm-10">
                            <field name="start_rail" readonly="1" force_save="1"
                                   options="{'no_create_edit': True,'no_open': True, 'no_create':True}"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="method">method</label>
                        <div class="col-sm-10">
                            <field name="method"/>
                        </div>
                    </div>

                    <div class="form-group row"
                         attrs="{'invisible': [('method', '=', 'recommend')]}">
                        <label class="col-sm-2 col-form-label"
                               for="end_rail">end_rail</label>
                        <div class="col-sm-10">
                            <field name="end_rail"
                                   options="{'dynamic_domain_model': 'metro_park_dispatch.chose_pos_wizard',
                                            'dynamic_domain_method': 'get_rail_domain',
                                            'no_create_edit': True,
                                            'no_open': True,
                                            'no_create':True}" />
                        </div>
                    </div>

                    <div class="form-group row" attrs="{'invisible': [('method', '!=', 'recommend')]}">
                        <label class="col-sm-2 col-form-label"
                               for="recommend_rail">recommend_rail</label>
                        <div class="col-sm-10">
                            <field name="recommend_rail"/>
                        </div>
                    </div>

                    <div class="form-group row" >
                        <label class="col-sm-2 col-form-label"
                               for="decision_info">decision_info</label>
                        <div class="col-sm-10">
                            <field name="decision_info"/>
                        </div>
                    </div>

                    <footer>
                        <button class="btn btn-success"
                                type="object"
                                name="on_chose_position"
                                text="确定" />
                        <button class="btn btn-info" text="取消" special="cancel" />
                    </footer>

                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window"
                id="metro_park_dispatch.chose_pos_wizard_act_window">
            <field name="name">位置选择向导</field>
            <field name="res_model">metro_park_dispatch.chose_pos_wizard</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    