
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_dispatch.day_run_plan_compute_wizard_list">
            <field name="name">车间日生产计划计算向导</field>
            <field name="model">metro_park_dispatch.day_run_plan_compute_wizard</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="time_table"/>
                    <field name="day_run_plan_id"/>
                    <field name="run_trains"/>
                </tree>
            </field>
        </record>

        
        <record model="ir.ui.view" id="metro_park_dispatch.day_run_plan_compute_wizard_form">
            <field name="name">车间日生产计划计算向导</field>
            <field name="model">metro_park_dispatch.day_run_plan_compute_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="day_run_plan_id">day_run_plan_id</label>
                        <div class="col-sm-10">
                            <field name="day_run_plan_id" attrs="{'readonly': True}"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="time_table">time_table</label>
                        <div class="col-sm-10">
                            <field name="time_table"
                                   options="{'no_create_edit': True,'no_open': True, 'no_create':True}"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="run_trains">run_trains</label>
                        <div class="col-sm-10">
                            <field name="run_trains"
                                   context="{'tree_view_ref': 'metro_park_dispatch.cur_train_manage_pop_list'}">
                                <tree js_class="fnt_table" options="{'height': '300'}">
                                    <field name="train_no" />
                                    <field name="train_type" />
                                    <field name="cur_location" />
                                    <field name="train_status" />
                                </tree>
                            </field>
                        </div>
                    </div>

                    <footer>
                        <button class="btn btn-success" type="object" name="on_ok" text="确定" />
                        <button class="btn btn-info" text="取消" special="cancel" />
                    </footer>
                    
                </form>
            </field>
        </record>

        
        <record model="ir.actions.act_window"
                id="metro_park_dispatch.day_run_plan_compute_wizard_act_window">
            <field name="name">车间日生产计划计算向导</field>
            <field name="res_model">metro_park_dispatch.day_run_plan_compute_wizard</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    