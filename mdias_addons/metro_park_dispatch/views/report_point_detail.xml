
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_dispatch.report_point_detail_list">
            <field name="name">报点详情</field>
            <field name="model">metro_park_dispatch.report_point_detail</field>
            <field name="arch" type="xml">
                <tree js_class="fnt_table">
                    <field name="execute_time"/>
                    <field name="dispatch_ticket_id"/>
                    <field name="train_no"/>
                    <field name="report_type"/>
                    <field name="rail_sec_id"/>
                    <field name="rail_no"/>
                </tree>
            </field>
        </record>

        
        <record model="ir.ui.view" id="metro_park_dispatch.report_point_detail_form">
            <field name="name">报点详情</field>
            <field name="model">metro_park_dispatch.report_point_detail</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="execute_time">execute_time</label>
                        <div class="col-sm-10">
                            <field name="execute_time"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="dispatch_ticket_id">dispatch_ticket_id</label>
                        <div class="col-sm-10">
                            <field name="dispatch_ticket_id"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="train_no">train_no</label>
                        <div class="col-sm-10">
                            <field name="train_no"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="report_type">report_type</label>
                        <div class="col-sm-10">
                            <field name="report_type" required="1"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="rail_sec_id">rail_sec_id</label>
                        <div class="col-sm-10">
                            <field name="rail_sec_id" required="1"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="rail_no">rail_no</label>
                        <div class="col-sm-10">
                            <field name="rail_no" required="1"/>
                        </div>
                    </div>
                    
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="metro_park_dispatch.report_point_detail_act_window">
            <field name="name">report_point_detail</field>
            <field name="res_model">metro_park_dispatch.report_point_detail</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    