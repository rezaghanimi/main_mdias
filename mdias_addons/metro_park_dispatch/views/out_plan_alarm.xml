
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_dispatch.out_alarm_list">
            <field name="name">发车提醒</field>
            <field name="model">metro_park_dispatch.out_plan_alarm</field>
            <field name="arch" type="xml">
                <tree js_class="fnt_table">
                    <field name="plan_id"/>
                </tree>
            </field>
        </record>

        
        <record model="ir.ui.view" id="metro_park_dispatch.out_alarm_form">
            <field name="name">发车提醒</field>
            <field name="model">metro_park_dispatch.out_plan_alarm</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="out_alarm">out_alarm</label>
                        <div class="col-sm-10">
                            <field name="plan_id">
                                <tree js_class="fnt_table">
                                    <field string="plan_train_no" />
                                    <field string="real_train_no" />
                                    <field string="plan_out_time" />
                                    <field string="plan_rail" />
                                </tree>
                            </field>
                        </div>
                    </div>
                    
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="metro_park_dispatch.out_alarm_act_window">
            <field name="name">发车提醒</field>
            <field name="res_model">metro_park_dispatch.out_plan_alarm</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!---->
        <menuitem action="metro_park_dispatch.out_alarm_act_window"
                  id="metro_park_dispatch.out_alarm_menu"
                  name="发车提醒"
                  parent="metro_park_dispatch.menu_root"/>
    </data>
</odoo>
    