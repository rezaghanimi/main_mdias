
<odoo>
    <data>
        
        <record model="ir.ui.view"
                id="metro_park_dispatch.train_num_list">
            <field name="name">train_num list </field>
            <field name="model">metro_park_dispatch.train_num</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="index"/>
                    <field name="value"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view"
                id="metro_park_dispatch.train_num_form">
            <field name="name">车辆数量</field>
            <field name="model">metro_park_dispatch.train_num</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="value">value</label>
                        <div class="col-sm-10">
                            <field name="value"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="index">index</label>
                        <div class="col-sm-10">
                            <field name="index"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="metro_park_dispatch.train_num_act_window">
            <field name="name">车辆数量</field>
            <field name="res_model">metro_park_dispatch.train_num</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    