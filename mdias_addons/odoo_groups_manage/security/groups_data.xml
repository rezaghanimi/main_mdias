<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="0">
        <record model="ir.module.category" id="sys_setting_category">
            <field name="name">系统设置</field>
        </record>

        <record model="ir.module.category" id="group_sys_safe_category">
            <field name="name">系统安全设置</field>
            <field name="parent_id" ref="sys_setting_category"/>
        </record>


        <record model="ir.module.category" id="group_manager">
            <field name="parent_id" ref="group_sys_safe_category"/>
            <field name="name">权限组管理</field>
        </record>

        <record model="res.groups" id="permission_manage">
            <field name="name">权限管理</field>
            <field name="category_id" ref="group_manager"/>
            <field name="atomic">True</field>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record model="res.groups" id="role_manage">
            <field name="name">角色管理</field>
            <field name="category_id" ref="group_manager"/>
            <field name="atomic">True</field>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record model="ir.module.category" id="group_setting_manager">
            <field name="parent_id" ref="group_sys_safe_category"/>
            <field name="name">系统管理设置</field>
        </record>


        <record model="res.groups" id="base.group_erp_manager">
            <field name="name">访问</field>
            <field name="category_id" ref="group_setting_manager"/>
            <field name="atomic">True</field>
        </record>

        <record model="res.groups" id="base.group_system">
            <field name="name">设置</field>
            <field name="category_id" ref="group_setting_manager"/>
            <field name="atomic">True</field>
        </record>

        <record model="res.groups" id="base.group_user">
            <field name="name">Internal User</field>
            <field name="atomic">True</field>
        </record>

        <record model="res.groups" id="base.group_multi_company">
            <field name="name">Multi Companies</field>
            <field name="atomic">True</field>
        </record>

        <record model="res.groups" id="base.group_multi_currency">
            <field name="name">Multi Currencies</field>
            <field name="atomic">True</field>
        </record>

        <record model="res.groups" id="base.group_no_one">
            <field name="name">Technical Features</field>
            <field name="atomic">True</field>
        </record>

        <record model="res.groups" id="base.group_partner_manager">
            <field name="name">Contact Creation</field>
            <field name="atomic">True</field>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="base.group_private_addresses" model="res.groups">
            <field name="atomic">True</field>
            <field name="name">Access to Private Addresses</field>
        </record>

        <record id="base.group_portal" model="res.groups">
            <field name="name">Portal</field>
            <field name="atomic">True</field>
            <field name="comment">Portal members have specific access rights (such as record rules and restricted
                menus).
                They usually do not belong to the usual Odoo groups.
            </field>
        </record>
        <!--
            A group dedicated to the public user only, making groups
            restrictions more convenient.
        -->
        <record id="base.group_public" model="res.groups">
            <field name="name">Public</field>
            <field name="atomic">True</field>
            <field name="comment">Public users have specific access rights (such as record rules and restricted menus).
                They usually do not belong to the usual Odoo groups.
            </field>
        </record>

    </data>

</odoo>