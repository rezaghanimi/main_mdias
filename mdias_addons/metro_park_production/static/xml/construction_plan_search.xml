<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<!-- 施工计划搜索 -->
    <t t-name="construction_plan_search">
	   <div class="container-fluid">
           <div class="row align-items-center">
               <div class="col-lg-2 col-md-3 col-sm-6 col-12">
                   <div for="work_content" option="{'placeholder':'作业类型'}"/>
               </div>

               <div class="col-lg-2 col-md-3 col-sm-6 col-12">
                   <div for="line_id" option="{'placeholder':'线路'}"/>
               </div>

			   <div class="col-lg-2 col-md-3 col-sm-6 col-12">
                   <div for="work_time_start" option="{'placeholder':'计划日期'}"/>
               </div>

               <div class="col-lg-2 col-md-3 col-sm-6 col-12">
                   <div for="assist_station_info" option="{'placeholder':'受理车站'}"/>
               </div>

               <div class="col-md-auto">
                   <!-- class有search_extend_apply的为搜索的确定按钮 -->
                   <button type="button" class="btn btn-primary search_extend_apply">
                       应用
                   </button>
                   <!-- class有search_extend_reset的为搜索的重置按钮 -->
                   <button type="button" class="btn btn-info search_extend_reset">
                       重置
                   </button>
               </div>
           </div>
       </div>
	</t>

</templates>