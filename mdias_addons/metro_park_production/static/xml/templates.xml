<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <!-- 交接班按钮 -->
    <t t-name="handover.ListView.buttons">
        <div class="o_list_buttons" role="toolbar" aria-label="Main actions">
            <button type="button" class="btn btn-secondary handover_button">
                交接班
            </button>
        </div>
    </t>

    <!--调度计划，施工计划-->
    <t t-name="production.ListView.buttons">
        <div class="o_list_buttons" role="toolbar" aria-label="Main actions">
            <button type="button" class="btn btn-secondary dispatch_button">
                调度计划
            </button>
            <button type="button" class="btn btn-secondary construction_button">
                施工计划
            </button>
        </div>
    </t>

    <t t-name="echart_one">
        <div id="echart_bol" style="width:600px;height:400px"> </div>
    </t>

    <t t-name="tem_file_tree_widget">
        <div class="o_list_buttons" role="toolbar" aria-label="Main actions">
            <button type="button" class="btn btn-secondary look">
                预览
            </button>
            <button type="button" class="btn btn-primary down">
                下载
            </button>
            <button type="button" class="btn btn-secondary edit">
                编辑
            </button>
            <button type="button" class="btn btn-primary del" confirm="是否确认删除该记录?">
                删除
            </button>
        </div>
    </t>

    <!-- 投屏按钮 !-->
    <t t-name="screening_buttons">
        <div>
            <button type="object"
                    name="jump_static_action"
                    class="btn btn-sm btn-info">
                投屏
            </button>
        </div>

    </t>


    <t t-name="handover_delete_button">
        <div>
            <button type="object"
                    name="delete_rec"
                    class="btn btn-primary">
                删除
            </button>
        </div>

    </t>

    <t t-name="construction.import_tree_button">
        <div>
            <button type="object" name="model_import" class="btn btn-primary">
                导入
            </button>
        </div>
    </t>

    <t t-name="metro_park_production.funenc_html_editor">
        <div style="width:100%;">
            <div>
                <div class="fnt_html_editor" id="big_screen"/>
            </div>
        </div>
    </t>

    <t t-name="metro_park_production.big_screen_list.buttons">
        <div class="o_list_buttons" role="toolbar" aria-label="Main actions">
            <t t-if="widget.is_action_enabled('create')">
                <button type="button" class="btn btn-primary o_list_button_add" accesskey="c">
                    Create
                </button>
            </t>
            <button type="button" class="btn btn-primary o_list_button_save" accesskey="s">
                Save
            </button>
            <button type="button" class="btn btn-secondary o_list_button_discard" accesskey="j">
                Discard
            </button>
            <button type="button" class="btn btn-secondary publish_screen" accesskey="p">
                发布
            </button>
        </div>
    </t>

</templates>
