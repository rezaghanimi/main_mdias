
<odoo>
    <data>
        
        <record model="ir.ui.view" id="funenc_theme.funenc_theme_style_list">
            <field name="name">funenc_theme_style list </field>
            <field name="model">funenc_theme.funenc_theme_style</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="uid"/>
                    <field name="style_txt"/>
                    <field name="remark"/> 
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="funenc_theme.funenc_theme_style_form">
            <field name="name">funenc_theme_style form </field>
            <field name="model">funenc_theme.funenc_theme_style</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="uid">uid</label>
                        <div class="col-sm-10">
                            <field name="uid"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="style_txt">style_txt</label>
                        <div class="col-sm-10">
                            <field name="style_txt"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="remark">remark</label>
                        <div class="col-sm-10">
                            <field name="remark"/>
                        </div>
                    </div> 
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="funenc_theme.funenc_theme_style_act_window">
            <field name="name">funenc_theme_style</field>
            <field name="res_model">funenc_theme.funenc_theme_style</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem 
            action="funenc_theme.funenc_theme_style_act_window" 
            id="funenc_theme.funenc_theme_style_menu"
            name="主题风格" 
            parent="funenc_theme.menu_root"/>
    </data>
</odoo>
    


    