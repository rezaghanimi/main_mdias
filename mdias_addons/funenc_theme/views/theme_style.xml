<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="tree_funenc_theme_style" model="ir.ui.view">
            <field name="name">主题配置</field>
            <field name="model">funenc_theme.funenc_system_style</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="active"/>
                    <field name="create_date" string="创建日期"/>
                </tree>
            </field>
        </record>

        <record id="form_funenc_theme_style" model="ir.ui.view">
            <field name="name">主题配置</field>
            <field name="model">funenc_theme.funenc_system_style</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button"/>
                            </button>
                        </div>
                        <group>
                            <field name="name"/>
                            <field name="login_page_background_image"/>
                            <field name="background_color"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>