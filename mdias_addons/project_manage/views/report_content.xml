
<odoo>
    <data>
        
        <record model="ir.ui.view" id="project_manage.report_content_list">
            <field name="name">项目列表</field>
            <field name="model">project_manage.report_content</field>
            <field name="arch" type="xml">
                <tree js_class="fnt_table">
                    <field name="content"/>
                    <field name="send_to_master"/>
                </tree>
            </field>
        </record>

        
        <record model="ir.ui.view" id="project_manage.report_content_form">
            <field name="name">项目内容</field>
            <field name="model">project_manage.report_content</field>
            <field name="arch" type="xml">
                <form>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="content">content</label>
                        <div class="col-sm-10">
                            <field name="content"/>
                        </div>
                    </div>

                    <field name="report_time" invisible="1"/>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="send_to_master">send_to_master</label>
                        <div class="col-sm-10">
                            <field name="send_to_master"/>
                        </div>
                    </div>
                    
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="project_manage.report_content_act_window">
            <field name="name">上报内容</field>
            <field name="res_model">project_manage.report_content</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    