
<odoo>
    <data>
        
        <record model="ir.ui.view" id="project_manage.project_type_list">
            <field name="name">项目类型</field>
            <field name="model">project_manage.project_type</field>
            <field name="arch" type="xml">
                <tree js_class="fnt_table" options="{'height': 'full-260'}">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        
        <record model="ir.ui.view" id="project_manage.project_type_form">
            <field name="name">项目类型</field>
            <field name="model">project_manage.project_type</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="name">name</label>
                        <div class="col-sm-10">
                            <field name="name"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        
        <record model="ir.actions.act_window" id="project_manage.project_type_act_window">
            <field name="name">项目类型</field>
            <field name="res_model">project_manage.project_type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                action="project_manage.project_type_act_window"
                id="project_manage.project_type_menu"
                name="项目类型"
                parent="project_manage.menu_root"/>
    </data>
</odoo>
    