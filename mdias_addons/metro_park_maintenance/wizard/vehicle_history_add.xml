<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="maintenance_vehicle_history_add_form">
        <field name="name">车辆公里数录入</field>
        <field name="model">maintenance.vehicle.history.add</field>
        <field name="arch" type="xml">
            <form>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="train_dev_ids"/>
                    <div class="col-sm-10">
                        <field name="train_dev_ids" required="1" widget="many2many_tags" options="{'no_open':'1', 'no_create': True, 'no_open': True}"/>
                    </div>
                    <label class="col-sm-2 col-form-label" for="date"/>
                    <div class="col-sm-10">
                        <field name="date" required="1"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="today_mileage"/>
                    <div class="col-sm-3">
                        <field name="today_mileage"/>
                    </div>
                    <label class="col-sm-2 col-form-label" for="total_mileage"/>
                    <div class="col-sm-3">
                        <field name="total_mileage"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="traction_consumption"/>
                    <div class="col-sm-3">
                        <field name="traction_consumption"/>
                    </div>
                    <label class="col-sm-2 col-form-label" for="auxiliary_consumption"/>
                    <div class="col-sm-3">
                        <field name="auxiliary_consumption"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="regeneration_consumption"/>
                    <div class="col-sm-3">
                        <field name="regeneration_consumption"/>
                    </div>
                </div>
                <footer>
                    <button class="btn btn-success" type="object" name="add_vehicle_data" text="确认录入" />
                    <button class="btn btn-secondary" text="取消" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="maintenance_vehicle_history_add_act_window">
        <field name="name">车辆公里数录入</field>
        <field name="res_model">maintenance.vehicle.history.add</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
