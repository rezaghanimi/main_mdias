<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="maintenance_vehicle_history_import_list">
        <field name="name">历史公里数导入</field>
        <field name="model">maintenance.vehicle.history.import</field>
        <field name="arch" type="xml">
            <tree>
                <field name="file"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="maintenance_vehicle_history_import_form">
        <field name="name">历史公里数导入</field>
        <field name="model">maintenance.vehicle.history.import</field>
        <field name="arch" type="xml">
            <form>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="start_date"/>
                    <div class="col-sm-3">
                        <field name="start_date" required="1"/>
                    </div>
                    <label class="col-sm-2 col-form-label" for="end_date"/>
                    <div class="col-sm-3">
                        <field name="end_date" required="1"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="file">file</label>
                    <div class="col-sm-10">
                        <field name="file" required="1"/>
                    </div>
                </div>
                <footer>
                    <button class="btn btn-success" type="object" name="start_import" text="确定导入" />
                    <button class="btn btn-info" text="取消" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="maintenance_vehicle_history_import_act_window">
        <field name="name">历史公里数导入</field>
        <field name="res_model">maintenance.vehicle.history.import</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
