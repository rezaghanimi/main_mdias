<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="maintenance_vehicle_history_delete_form">
        <field name="name">批量删除车辆公里</field>
        <field name="model">maintenance.vehicle.history.delete</field>
        <field name="arch" type="xml">
            <form>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="delete_type"/>
                    <div class="col-sm-10">
                        <field name="delete_type"/>
                    </div>
                </div>
                <div class="form-group row" attrs="{'invisible': [('delete_type','=', 'date')]}">
                    <label class="col-sm-2 col-form-label" for="train_dev_ids"/>
                    <div class="col-sm-10">
                        <field name="train_dev_ids" widget="many2many_tags" options="{'no_open':'1', 'no_create': True, 'no_open': True}"/>
                    </div>
                </div>
                <div class="form-group row" attrs="{'invisible': [('delete_type','=', 'dev')]}">
                    <label class="col-sm-2 col-form-label" for="start_date"/>
                    <div class="col-sm-3">
                        <field name="start_date"/>
                    </div>
                    <label class="col-sm-2 col-form-label" for="end_date"/>
                    <div class="col-sm-3">
                        <field name="end_date"/>
                    </div>
                </div>
                <footer>
                    <button class="btn btn-success" type="object" name="delete_vehicle_data" text="确认删除" />
                    <button class="btn btn-secondary" text="取消" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="maintenance_vehicle_history_delete_act_window">
        <field name="name">批量删除车辆公里</field>
        <field name="res_model">maintenance.vehicle.history.delete</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
