
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_maintenance.month_repair_count_list">
            <field name="name">检修数量</field>
            <field name="model">metro_park_maintenance.month_repair_count</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="month"/>
                    <field name="count"/>
                </tree>
            </field>
        </record>

        
        <record model="ir.ui.view" id="metro_park_maintenance.month_repair_count_form">
            <field name="name">检修数量</field>
            <field name="model">metro_park_maintenance.month_repair_count</field>
            <field name="arch" type="xml">
                <form>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="month">month</label>
                        <div class="col-sm-10">
                            <field name="month"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="count">count</label>
                        <div class="col-sm-10">
                            <field name="count"/>
                        </div>
                    </div>
                    
                </form>
            </field>
        </record>

        
        <record model="ir.actions.act_window"
                id="metro_park_maintenance.month_repair_count_act_window">
            <field name="name">检修数量</field>
            <field name="res_model">metro_park_maintenance.month_repair_count</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    