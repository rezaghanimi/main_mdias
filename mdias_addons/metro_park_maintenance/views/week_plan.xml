<odoo>
    <data>

        <record model="ir.ui.view" id="metro_park_maintenance.week_plan_list">
            <field name="name">周计划</field>
            <field name="model">metro_park_maintenance.week_plan</field>
            <field name="arch" type="xml">
                <tree js_class="week_plan_list" options="{'height':'full-270'}">
                    <field name="sequence_no" width="150"/>
                    <field name="year"/>
                    <field name="week"/>
                    <field name="start_date" width="150"/>
                    <field name="end_date" width="150"/>
                    <field name="state" widget="template_widget"
                           options="{'template': 'funenc.week_plan_status_template'}"/>
                    <field name="remark"/>
                    <field name="operation_buttons" width="500"
                           widget="template_widget" options="{'template': 'funenc.week_plan_btns'}"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="metro_park_maintenance.week_plan_form">
            <field name="name">周计划表单</field>
            <field name="model">metro_park_maintenance.week_plan</field>
            <field name="arch" type="xml">
                <form create="0">

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="start_date">start_date</label>
                        <div class="col-sm-3">
                            <field name="start_date"/>
                        </div>
                        <label class="col-sm-2 col-form-label" for="end_date">end_date</label>
                        <div class="col-sm-3">
                            <field name="end_date"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="year">year</label>
                        <div class="col-sm-3">
                            <field name="year"/>
                        </div>
                        <label class="col-sm-2 col-form-label" for="week">week</label>
                        <div class="col-sm-3">
                            <field name="week"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="sequence_no">sequence_no</label>
                        <div class="col-sm-3">
                            <field name="sequence_no"/>
                        </div>
                        <label class="col-sm-2 col-form-label" for="state">state</label>
                        <div class="col-sm-3">
                            <field name="state"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="remark">remark</label>
                        <div class="col-sm-8">
                            <field name="remark"/>
                        </div>
                    </div>

                </form>
            </field>
        </record>

        <record model="ir.ui.view"
                id="metro_park_maintenance.week_plan_miel_work_class_form">
            <field name="name">里程修工班管理</field>
            <field name="model">metro_park_maintenance.week_plan</field>
            <field name="arch" type="xml">
                <form create="0" delete="0">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="mile_work_class_info">mile_work_class_info</label>
                        <div class="col-sm-10">
                            <field name="mile_work_class_info">
                                <tree js_class="fnt_table"
                                      options="{'height': '300'}"
                                      create="0"
                                      delete="0"
                                      editable="bottom">
                                    <field name="date" readonly="1" width="140" />
                                    <field name="work_class_name" width="180" />
                                </tree>
                            </field>
                        </div>
                    </div>

                    <footer>
                        <button class="btn btn-success" special="save_and_exit" name="on_ok" text="确定" />
                        <button class="btn btn-info" text="取消" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>


    