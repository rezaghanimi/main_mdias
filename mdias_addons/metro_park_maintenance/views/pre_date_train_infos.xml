
<odoo>
    <data>

        <record model="ir.ui.view"
                id="metro_park_maintenance.pre_date_train_infos_pop_list">
            <field name="name">车辆信息</field>
            <field name="model">metro_park_maintenance.pre_date_train_infos</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="train"/>
                    <field name="location"/>
                    <field name="miles"/>
                    <field name="last_mile_repair_date"/>
                    <field name="last_repair_miles"/>
                    <field name="miles_after_last_repair"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view"
                id="metro_park_maintenance.pre_date_train_infos_list">
            <field name="name">车辆信息</field>
            <field name="model">metro_park_maintenance.pre_date_train_infos</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="train"/>
                    <field name="location"/>
                    <field name="rail"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view"
                id="metro_park_maintenance.pre_date_train_infos_form">
            <field name="name">车辆信息</field>
            <field name="model">metro_park_maintenance.pre_date_train_infos</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="train">train</label>
                        <div class="col-sm-10">
                            <field name="train"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="location">location</label>
                        <div class="col-sm-10">
                            <field name="location"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="rail">rail</label>
                        <div class="col-sm-10">
                            <field name="rail"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window"
                id="metro_park_maintenance.pre_date_train_infos_act_window">
            <field name="name">车辆信息</field>
            <field name="res_model">metro_park_maintenance.pre_date_train_infos</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    