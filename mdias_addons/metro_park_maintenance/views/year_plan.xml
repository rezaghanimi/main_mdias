<odoo>
    <data>

        <record model="ir.ui.view" id="metro_park_maintenance.year_plan_list">
            <field name="name">年计划</field>
            <field name="model">metro_park_maintenance.year_plan</field>
            <field name="arch" type="xml">
                <tree js_class="year_plan_list"
                      custom_btn_template="year_plan.import_buttons"
                      options="{'height': 'full-270'}">
                    <field name="year"/>
                    <field name="work_unit"/>
                    <field name="start_month"/>
                    <field name="plan_name"/>
                    <field name="state"
                           widget="template_widget"
                           options="{'template': 'funenc.year_plan_status_template'}"/>
                    <field name="remark"/>
                    <field name="operation_buttons"
                           width="400"
                           widget="template_widget"
                           options="{'template': 'funenc.year_plan_btns'}"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="metro_park_maintenance.year_plan_form">
            <field name="name">年计划</field>
            <field name="model">metro_park_maintenance.year_plan</field>
            <field name="arch" type="xml">
                <form create="0">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="year">year</label>
                        <div class="col-sm-3">
                            <field name="year"/>
                        </div>
                        <label class="col-sm-2 col-form-label" for="work_unit">work_unit</label>
                        <div class="col-sm-3">
                            <field name="work_unit"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="start_month">start_month</label>
                        <div class="col-sm-10">
                            <field name="start_month"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="plan_name">plan_name</label>
                        <div class="col-sm-3">
                            <field name="plan_name"/>
                        </div>

                        <label class="col-sm-2 col-form-label" for="remark">remark</label>
                        <div class="col-sm-3">
                            <field name="remark"/>
                        </div>
                    </div>
                    <footer>
                        <button class="btn btn-success" special="save_and_exit" text="确定"/>
                        <button class="btn btn-info" text="取消" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="year_plan_summary" model="ir.actions.client">
            <field name="name">年计划查看</field>
            <field name="tag">year_detail_view</field>
            <field name="target">main</field>
        </record>

    </data>
</odoo>



    