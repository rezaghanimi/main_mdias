
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_maintenance.rule_count_constrain_list">
            <field name="name">rule_count_constrain list </field>
            <field name="model">metro_park_maintenance.rule_count_constrain</field>
            <field name="arch" type="xml">
                <tree js_class="fnt_table" options="{'height': '240'}" editable="top" create="0" >
                    <field name="rule" readonly="1" force_save="1"/>
                    <field name="count" string="数量(每天不超过)" width="150"/>
                </tree>
            </field>
        </record>

        
        <record model="ir.ui.view" id="metro_park_maintenance.rule_count_constrain_form">
            <field name="name">rule_count_constrain form </field>
            <field name="model">metro_park_maintenance.rule_count_constrain</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="rule">rule</label>
                        <div class="col-sm-10">
                            <field name="rule"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="metro_park_maintenance.rule_count_constrain_act_window">
            <field name="name">rule_count_constrain</field>
            <field name="res_model">metro_park_maintenance.rule_count_constrain</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    