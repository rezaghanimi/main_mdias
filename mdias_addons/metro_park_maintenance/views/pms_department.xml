
<odoo>
    <data>
        
        <record model="ir.ui.view"
                id="metro_park_maintenance.pms_department_list">
            <field name="name">pms部门</field>
            <field name="model">pms.department</field>
            <field name="arch" type="xml">
                <tree js_class="fnt_table"
                      create="0"
                      edit="0"
                      options="{'height': 'full-300'}">
                    <field name="department" width="200"/>
                    <field name="department_no" width="200"/>
                    <field name="parent_department" width="200"/>
                    <field name="parent_department_no" width="200"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view"
                id="metro_park_maintenance.pms_department_form">
            <field name="name">计划日志</field>
            <field name="model">pms.department</field>
            <field name="arch" type="xml">
                <form>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="department">department</label>
                        <div class="col-sm-10">
                            <field name="department"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="department_no">department_no</label>
                        <div class="col-sm-10">
                            <field name="department_no"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="parent_department">parent_department</label>
                        <div class="col-sm-10">
                            <field name="parent_department"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="parent_department_no">parent_department_no</label>
                        <div class="col-sm-10">
                            <field name="parent_department_no"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

    </data>
</odoo>
    