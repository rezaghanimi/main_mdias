
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_maintenance.last_repair_info_list">
            <field name="name">last_repair_info list </field>
            <field name="model">metro_park_maintenance.last_repair_info</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="repair_date"/>
                    <field name="rule"/>
                    <field name="repair_num"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="metro_park_maintenance.last_repair_info_form">
            <field name="name">last_repair_info form </field>
            <field name="model">metro_park_maintenance.last_repair_info</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="repair_date">repair_date</label>
                        <div class="col-sm-10">
                            <field name="repair_date"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="rule">rule</label>
                        <div class="col-sm-10">
                            <field name="rule"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="repair_num">repair_num</label>
                        <div class="col-sm-10">
                            <field name="repair_num"/>
                        </div>
                    </div>
                    
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window"
                id="metro_park_maintenance.last_repair_info_act_window">
            <field name="name">last_repair_info</field>
            <field name="res_model">metro_park_maintenance.last_repair_info</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    