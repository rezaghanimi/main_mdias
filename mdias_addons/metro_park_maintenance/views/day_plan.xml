<odoo>
    <data>

        <record model="ir.ui.view" id="metro_park_maintenance.day_plan_list">
            <field name="name">日计划</field>
            <field name="model">metro_park_maintenance.day_plan</field>
            <field name="arch" type="xml">
                <tree js_class="day_plan_list" options="{'height':'full-270'}">
                    <field name="plan_name" width="150"/>
                    <field name="use_pms_maintaince" invisible="1"/>
                    <field name="plan_date" width="150"/>
                    <field name="state" widget="template_widget"
                           options="{'template': 'funenc.day_plan_status_template'}"/>
                    <field name="remark"/>
                    <field name="operation_buttons" width="400" widget="template_widget"
                           options="{'template': 'funenc.day_plan_btns'}"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="metro_park_maintenance.day_plan_form">
            <field name="name">日计划</field>
            <field name="model">metro_park_maintenance.day_plan</field>
            <field name="arch" type="xml">
                <form create="0">

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="plan_name">plan_name</label>
                        <div class="col-sm-3">
                            <field name="plan_name"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="remark">remark</label>
                        <div class="col-sm-6">
                            <field name="remark"/>
                        </div>
                    </div>

                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="metro_park_maintenance.day_plan_manage_run_train">
            <field name="name">运营车管理</field>
            <field name="model">metro_park_maintenance.day_plan</field>
            <field name="arch" type="xml">
                <form create="0">

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="run_trains">run_trains</label>
                        <div class="col-sm-8">
                            <field name="run_trains">
                                <tree js_class="fnt_table" options="{'height': '300'}">
                                    <field name="dev_no"/>
                                    <field name="miles" options="{'no_create_edit': True,'no_open': True, 'no_create':True}"/>
                                    <field name="cur_location" options="{'no_create_edit': True,'no_open': True, 'no_create':True}"/>
                                </tree>
                            </field>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="run_train_count">run_train_count</label>
                        <div class="col-sm-10">
                            <field name="run_train_count"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="run_task_count">run_task_count</label>
                        <div class="col-sm-10">
                            <field name="run_task_count"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="plan_info_description">plan_info_description</label>
                        <div class="col-sm-10">
                            <field name="plan_info_description"
                                   widget="template_widget"
                                   options="{'template': 'metro_park_maintenance.day_plan_info'}"/>
                        </div>
                    </div>

                    <footer>
                        <button class="btn btn-success" special="save_and_exit" name="on_ok" text="确定" />
                        <button class="btn btn-info" text="取消" special="cancel" />
                    </footer>

                </form>
            </field>
        </record>

        <!--  取得上日车辆位置  -->
        <record model="ir.ui.view" id="metro_park_maintenance.pre_date_train_infos_manage">
            <field name="name">车辆信息</field>
            <field name="model">metro_park_maintenance.day_plan</field>
            <field name="arch" type="xml">
                <form create="0">

                    <div class="form-group row">
                        <div class="col-sm-12">
                            <field name="train_infos">
                                <tree js_class="fnt_table" options="{'height': '300'}" editable="top">
                                    <field name="train" fixed_left="1" readoly="1" options="{'no_create_edit': True,'no_open': True, 'no_create':True}"/>
                                    <field name="location" width="130" options="{'no_create_edit': True,'no_open': True, 'no_create':True}"/>
                                    <field name="rail" options="{'no_create_edit': True,'no_open': True, 'no_create':True}"/>
                                    <field name="miles"/>
                                    <field name="last_mile_repair_date" width="130" />
                                    <field name="last_repair_miles"/>
                                    <field name="miles_after_last_repair"/>
                                </tree>
                            </field>
                        </div>
                    </div>

                    <footer>
                        <button class="btn btn-success" special="save_and_exit" name="on_ok" text="确定" />
                        <button class="btn btn-info" text="取消" special="cancel" />
                    </footer>

                </form>
            </field>
        </record>

        <!-- 热备车 -->
        <record model="ir.ui.view"
                id="metro_park_maintenance.day_plan_manage_hot_back_train">
            <field name="name">热备车</field>
            <field name="model">metro_park_maintenance.day_plan</field>
            <field name="arch" type="xml">
                <form create="0">

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="hot_back_trains">hot_back_trains</label>
                        <div class="col-sm-8">
                            <field name="hot_back_trains">
                                <tree js_class="fnt_table" options="{'height': '300'}">
                                    <field name="dev_no"/>
                                    <field name="miles"/>
                                </tree>
                            </field>
                        </div>
                    </div>

                    <footer>
                        <button class="btn btn-success" special="save_and_exit" name="on_ok" text="确定" />
                        <button class="btn btn-info" text="取消" special="cancel" />
                    </footer>

                </form>
            </field>
        </record>

        <record model="ir.actions.act_window"
                id="metro_park_maintenance.day_plan_act_window">
            <field name="name">日计划</field>
            <field name="res_model">metro_park_maintenance.day_plan</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>


    