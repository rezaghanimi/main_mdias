
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_maintenance.mile_repair_history_list">
            <field name="name">里程修历史</field>
            <field name="model">metro_park_maintenance.mile_repair_history</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="remark"/>
                    <field name="dev"/>
                    <field name="date"/>
                    <field name="miles"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="metro_park_maintenance.mile_repair_history_form">
            <field name="name">里程修历史</field>
            <field name="model">metro_park_maintenance.mile_repair_history</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="remark">remark</label>
                        <div class="col-sm-10">
                            <field name="remark"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="dev">dev</label>
                        <div class="col-sm-10">
                            <field name="dev"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="date">date</label>
                        <div class="col-sm-10">
                            <field name="date"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="miles">miles</label>
                        <div class="col-sm-10">
                            <field name="miles"/>
                        </div>
                    </div>
                    
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="metro_park_maintenance.mile_repair_history_act_window">
            <field name="name">里程修历史</field>
            <field name="res_model">metro_park_maintenance.mile_repair_history</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    