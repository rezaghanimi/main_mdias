
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_maintenance.day_plan_limit_list">
            <field name="name">日计划限制</field>
            <field name="model">metro_park_maintenance.day_plan_limit</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="max_repair_after_high_run"/>
                    <field name="max_repair_back_time"/>
                </tree>
            </field>
        </record>

        
        <record model="ir.ui.view" id="metro_park_maintenance.day_plan_limit_form">
            <field name="name">日计划限制</field>
            <field name="model">metro_park_maintenance.day_plan_limit</field>
            <field name="arch" type="xml">
                <form>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="max_repair_after_high_run">max_repair_after_high_run</label>
                        <div class="col-sm-10">
                            <field name="max_repair_after_high_run"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="max_repair_back_time">max_repair_back_time</label>
                        <div class="col-sm-10">
                            <field name="max_repair_back_time"/>
                        </div>
                    </div>
                    
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window"
                id="metro_park_maintenance.day_plan_limit_act_window">
            <field name="name">日计划限制</field>
            <field name="res_model">metro_park_maintenance.day_plan_limit</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    