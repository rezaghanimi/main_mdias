
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_maintenance.import_pre_day_miles_info_list">
            <field name="name">import_pre_day_miles_info list </field>
            <field name="model">metro_park_maintenance.import_pre_day_miles_info</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="file"/>
                    <field name="day_plan_id"/>
                </tree>
            </field>
        </record>

        
        <record model="ir.ui.view" id="metro_park_maintenance.import_pre_day_miles_info_form">
            <field name="name">import_pre_day_miles_info form </field>
            <field name="model">metro_park_maintenance.import_pre_day_miles_info</field>
            <field name="arch" type="xml">
                <form>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="file">file</label>
                        <div class="col-sm-10">
                            <field name="file"/>
                        </div>
                    </div>

                    <div class="form-group row" attrs="{'invisible': True}">
                        <label class="col-sm-2 col-form-label" for="day_plan_id">day_plan_id</label>
                        <div class="col-sm-10">
                            <field name="day_plan_id" force_save="1"/>
                        </div>
                    </div>

                    <footer>
                        <button class="btn btn-success" type="object" name="on_ok" text="确定" />
                        <button class="btn btn-info" text="取消" special="cancel" />
                    </footer>
                    
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="metro_park_maintenance.import_pre_day_miles_info_act_window">
            <field name="name">import_pre_day_miles_info</field>
            <field name="res_model">metro_park_maintenance.import_pre_day_miles_info</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    