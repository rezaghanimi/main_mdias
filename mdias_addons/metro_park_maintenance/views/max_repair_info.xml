
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_maintenance.max_repair_info_list">
            <field name="name">最大检修数量</field>
            <field name="model">metro_park_maintenance.max_repair_info</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="max_count"/>
                    <field name="rule_id"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="metro_park_maintenance.max_repair_info_form">
            <field name="name">最大检修数量</field>
            <field name="model">metro_park_maintenance.max_repair_info</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="max_count">max_count</label>
                        <div class="col-sm-10">
                            <field name="max_count"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="rule_id">rule_id</label>
                        <div class="col-sm-10">
                            <field name="rule_id"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window"
                id="metro_park_maintenance.max_repair_info_act_window">
            <field name="name">最大检修数量</field>
            <field name="res_model">metro_park_maintenance.max_repair_info</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- 扩展表单 -->
        <record model="ir.ui.view" id="metro_park_maintenance.location_form_extend">
            <field name="name">位置</field>
            <field name="model">metro_park_base.location</field>
            <field name="inherit_id" ref="metro_park_base.location_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="最大检修">
                        <field name="max_repair_info">
                            <tree js_class="fnt_table" options="{'height': 300}">
                                <field name="rule_id"/>
                                <field name="max_count"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
    