
<odoo>
    <data>
        
        <record model="ir.ui.view"
                id="metro_park_maintenance.year_plan_history_info_list">
            <field name="name">year_plan_history_info list </field>
            <field name="model">metro_park_maintenance.year_plan_history_info</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="rule_infos"/>
                    <field name="month"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view"
                id="metro_park_maintenance.year_plan_history_info_form">
            <field name="name">year_plan_history_info form </field>
            <field name="model">metro_park_maintenance.year_plan_history_info</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="plan_id">plan_id</label>
                        <div class="col-sm-10">
                            <field name="plan_id" options="{'no_create_edit': True,'no_open': True, 'no_create':True}"/>
                        </div>
                    </div>

                    <div class="form-group row" attrs="{'invisible': [('plan_id', '=', False)]}">
                        <label class="col-sm-2 col-form-label" for="month">month</label>
                        <div class="col-sm-10">
                            <field name="month" options="{'no_create_edit': True,'no_open': True, 'no_create':True}"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="rule_infos">rule_infos</label>
                        <div class="col-sm-10">
                            <field name="rule_infos">
                                <tree js_class="fnt_table" options="{'height': '300'}" editable="top">
                                    <field name="dev" width="100" readonly="1" options="{'no_create_edit': True,'no_open': True, 'no_create':True}"/>
                                    <field name="rule" width="100" readonly="1" options="{'no_create_edit': True,'no_open': True, 'no_create':True}"/>
                                    <field name="date" width="130" readonly="1" />
                                    <field name="repair_num" width="140" />
                                </tree>
                            </field>
                        </div>
                    </div>

                    <footer>
                        <button class="btn btn-success" special="save" text="确定" />
                        <button class="btn btn-info" text="取消" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window"
                id="metro_park_maintenance.year_plan_history_info_act_window">
            <field name="name">year_plan_history_info</field>
            <field name="res_model">metro_park_maintenance.year_plan_history_info</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    