
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_maintenance.plan_log_list">
            <field name="name">计划日志</field>
            <field name="model">metro_park_maintenance.plan_log</field>
            <field name="arch" type="xml">
                <tree js_class="fnt_table" create="0" edit="0"
                      options="{'height': 'full-300'}">
                    <field name="plan_time" width="300"/>
                    <field name="content" width="300"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view"
                id="metro_park_maintenance.plan_log_form">
            <field name="name">计划日志</field>
            <field name="model">metro_park_maintenance.plan_log</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="content">content</label>
                        <div class="col-sm-10">
                            <field name="content"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="plan_time">plan_time</label>
                        <div class="col-sm-10">
                            <field name="plan_time"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

    </data>
</odoo>
    