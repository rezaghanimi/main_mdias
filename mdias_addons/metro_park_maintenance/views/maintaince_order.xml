
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_maintenance.maintaince_order_list">
            <field name="name">检修工单</field>
            <field name="model">metro_park_maintenance.maintaince_order</field>
            <field name="arch" type="xml">
                <tree js_class="maintaince_order_btn" create="0" import="0"
                      search_ex_template="maintaince_order_search"
                      default_order="order_no desc"
                      options="{'height': 'full-330'}" limit="14">
                    <field name="order_no" fixed_left="1"/>
                    <field name="plan_name"/>
                    <field name="line"/>
                    <field name="major"/>
                    <field name="location"/>
                    <field name="work_department"/>
                    <field name="work_user"/>
                    <field name="report_user"/>
                    <field name="dispatch_user"/>
                    <field name="state"
                           widget="template_widget"
                           options="{'template': 'maintaince_order_status'}"/>

                    <field name="operation_btns"
                           widget="template_widget"
                           options="{'template': 'metro_park_maintenance.maintaince_order_operation_btns'}"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="metro_park_maintenance.maintaince_order_form">
            <field name="name">检修工单</field>
            <field name="model">metro_park_maintenance.maintaince_order</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form>
                    <h1>基本信息</h1>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="order_no">order_no</label>
                        <div class="col-sm-3">
                            <field name="order_no"/>
                        </div>
                        <label class="col-sm-2 col-form-label"
                               for="plan_no">plan_no</label>
                        <div class="col-sm-3">
                            <field name="plan_no"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="rule_name">rule_name</label>
                        <div class="col-sm-3">
                            <field name="rule_name"/>
                        </div>
                        <label class="col-sm-2 col-form-label"
                               for="plan_name">plan_name</label>
                        <div class="col-sm-4">
                            <field name="plan_name"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="line">line</label>
                        <div class="col-sm-3">
                            <field name="line"/>
                        </div>
                        <label class="col-sm-2 col-form-label"
                               for="location">location</label>
                        <div class="col-sm-3">
                            <field name="location"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="major">major</label>
                        <div class="col-sm-3">
                            <field name="major"/>
                        </div>
                        <label class="col-sm-2 col-form-label"
                               for="dev_type">dev_type</label>
                        <div class="col-sm-3">
                            <field name="dev_type"/>
                        </div>
                    </div>

                    <h1>作业信息</h1>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="plan_start_time">plan_start_time</label>
                        <div class="col-sm-3">
                            <field name="plan_start_time"/>
                        </div>
                        <label class="col-sm-2 col-form-label"
                               for="plan_end_time">plan_end_time</label>
                        <div class="col-sm-3">
                            <field name="plan_end_time"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="real_start_time">real_start_time</label>
                        <div class="col-sm-3">
                            <field name="real_start_time" readonly="1"/>
                        </div>
                        <label class="col-sm-2 col-form-label"
                               for="real_end_time">real_end_time</label>
                        <div class="col-sm-3">
                            <field name="real_end_time" readonly="1"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="work_department">work_department</label>
                        <div class="col-sm-3">
                            <field name="work_department" readonly="1"/>
                        </div>
                        <label class="col-sm-2 col-form-label"
                               for="wx_id">wx_id</label>
                        <div class="col-sm-3">
                            <field name="wx_id"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="work_user">work_user</label>
                        <div class="col-sm-3">
                            <field name="work_user" readonly="1"/>
                        </div>
                        <label class="col-sm-2 col-form-label"
                               for="confirm_user">confirm_user</label>
                        <div class="col-sm-3">
                            <field name="confirm_user" readonly="1"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="dispatch_user">dispatch_user</label>
                        <div class="col-sm-3">
                            <field name="dispatch_user" readonly="1"/>
                        </div>
                        <label class="col-sm-2 col-form-label"
                               for="report_user">report_user</label>
                        <div class="col-sm-3">
                            <field name="report_user" readonly="1"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="state">state</label>
                        <div class="col-sm-3">
                            <field name="state" readonly="1"/>
                        </div>
                    </div>

                    <h1>备注信息</h1>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="repair_des">repair_des</label>
                        <div class="col-sm-8">
                            <field name="repair_des"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="repair_detail">repair_detail</label>
                        <div class="col-sm-8">
                            <field name="repair_detail"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="remark">remark</label>
                        <div class="col-sm-8">
                            <field name="remark"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="write_uid" string="最后修改人">write_uid</label>
                        <div class="col-sm-8">
                            <field name="write_uid"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="write_date" string="最后修改时间">write_date</label>
                        <div class="col-sm-8">
                            <field name="write_date"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="order_log">order_log</label>
                        <div class="col-sm-8">
                            <field name="order_log" options="{'no_create_edit':1}"/>
                        </div>
                    </div>
                    
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window"
                id="metro_park_maintenance.maintaince_order_act_window">
            <field name="name">检修工单</field>
            <field name="res_model">metro_park_maintenance.maintaince_order</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    