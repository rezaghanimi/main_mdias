
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_maintenance.plan_data_list">
            <field name="name">计划数据</field>
            <field name="model">metro_park_maintenance.plan_data</field>
            <field name="arch" type="xml">
                <tree js_class="fnt_table" options="{'height': 'full-270'}">
                    <field name="date" fixed_left="1" />
                    <field name="rule_infos"/>
                    <field name="year"/>
                    <field name="month"/>
                    <field name="day"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="metro_park_maintenance.plan_data_form">
            <field name="name">计划数据</field>
            <field name="model">metro_park_maintenance.plan_data</field>
            <field name="arch" type="xml">
                <form>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="rule_infos">rule_infos</label>
                        <div class="col-sm-10">
                            <field name="rule_infos"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="year">year</label>
                        <div class="col-sm-10">
                            <field name="year"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="month">month</label>
                        <div class="col-sm-10">
                            <field name="month"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="day">day</label>
                        <div class="col-sm-10">
                            <field name="day"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="date">date</label>
                        <div class="col-sm-10">
                            <field name="date"/>
                        </div>
                    </div>
                    
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window"
                id="metro_park_maintenance.plan_data_act_window">
            <field name="name">plan_data</field>
            <field name="res_model">metro_park_maintenance.plan_data</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>


    