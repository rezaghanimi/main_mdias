<odoo>
    <data>

        <record model="ir.ui.view" id="metro_park_maintenance.week_plan_wizard_form">
            <field name="name">周计划向导</field>
            <field name="model">metro_park_maintenance.week_plan_wizard</field>
            <field name="arch" type="xml">
                <form>

                    <div class="form-group row">
                        <field name="use_pms_maintaince" invisible="1"/>
                        <label class="col-sm-2 col-form-label" for="year_plan">year_plan</label>
                        <div class="col-sm-3">
                            <field name="year_plan"
                                   options="{'no_create_edit': True, 'no_open': True, 'no_create':True}"/>
                        </div>
                    </div>

                    <div class="form-group row" attrs="{'invisible': [('year_plan', '=', False)]}">
                        <label class="col-sm-2 col-form-label" for="month_plan">month_plan</label>
                        <div class="col-sm-3">
                            <field name="month_plan"
                                   options="{'no_create_edit': True, 'no_open': True, 'no_create':True}"/>
                        </div>
                    </div>

                    <div class="form-group row" attrs="{'invisible': [('month_plan', '=', False)]}">
                        <label class="col-sm-2 col-form-label" for="week">week</label>
                        <div class="col-sm-3">
                            <field name="week" options="{'no_create_edit': True,'no_open': True, 'no_create':True}"/>
                        </div>
                    </div>

                    <div class="form-group row" attrs="{'invisible': [('month_plan', '=', False)]}">
                        <label class="col-sm-2 col-form-label" for="start_date">start_date</label>
                        <div class="col-sm-3">
                            <field name="start_date"/>
                        </div>
                    </div>

                    <div class="form-group row" attrs="{'invisible': [('month_plan', '=', False)]}">
                        <label class="col-sm-2 col-form-label" for="end_date">end_date</label>
                        <div class="col-sm-3">
                            <field name="end_date"/>
                        </div>
                    </div>

                    <div class="form-group row" attrs="{'invisible': [('week', '=', False)]}">
                        <label class="col-sm-2 col-form-label" for="plan_name">plan_name</label>
                        <div class="col-sm-3">
                            <field name="plan_name" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="pms_work_class_info"
                               attrs="{'invisible': [('use_pms_maintaince', '!=', 'yes')]}">pms_work_class_info
                        </label>
                        <div class="col-sm-3">
                            <field name="pms_work_class_info" options="{'no_create_edit': True,'no_open': True,
                             'no_create':True}"
                                   attrs="{'invisible': [('use_pms_maintaince', '!=', 'yes')],'required': [('use_pms_maintaince', '=', 'yes')]}"/>
                        </div>
                    </div>

                    <footer>
                        <button class="btn btn-info" text="确定" type="object" name="on_ok"/>
                        <button class="btn btn-waring" text="取消" special="cancel"/>
                    </footer>

                </form>
            </field>
        </record>

        <record model="ir.actions.act_window"
                id="metro_park_maintenance.week_plan_wizard_act_window">
            <field name="name">周计划向导</field>
            <field name="res_model">metro_park_maintenance.week_plan_wizard</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>


    