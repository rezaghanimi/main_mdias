
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_maintenance.train_dev_day_mile_set_list">
            <field name="name">train_dev_day_mile_set list </field>
            <field name="model">metro_park_maintenance.train_dev_day_mile_set</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="user_id"/>
                    <field name="miles"/>
                    <field name="date"/>
                    <field name="remark"/>
                </tree>
            </field>
        </record>

        
        <record model="ir.ui.view" id="metro_park_maintenance.train_dev_day_mile_set_form">
            <field name="name">train_dev_day_mile_set form </field>
            <field name="model">metro_park_maintenance.train_dev_day_mile_set</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="user_id">user_id</label>
                        <div class="col-sm-3">
                            <field name="user_id"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="miles">miles</label>
                        <div class="col-sm-3">
                            <field name="miles"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="date">date</label>
                        <div class="col-sm-3">
                            <field name="date"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="remark">remark</label>
                        <div class="col-sm-8">
                            <field name="remark"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        
        <record model="ir.actions.act_window"
                id="metro_park_maintenance.train_dev_day_mile_set_act_window">
            <field name="name">车辆里程设置</field>
            <field name="res_model">metro_park_maintenance.train_dev_day_mile_set</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>



    