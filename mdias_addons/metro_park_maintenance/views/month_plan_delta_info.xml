
<odoo>
    <data>
        
        <record model="ir.ui.view"
                id="metro_park_maintenance.month_plan_delta_info_list">
            <field name="name">偏移列表</field>
            <field name="model">metro_park_maintenance.month_plan_delta_info</field>
            <field name="arch" type="xml">
                <tree create="0" js_class="fnt_table" options="{'height': '400'}" default_order="dev asc">
                    <field name="dev"/>
                    <field name="days"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="metro_park_maintenance.month_plan_delta_info_form">
            <field name="name">month_plan_delta_info form </field>
            <field name="model">metro_park_maintenance.month_plan_delta_info</field>
            <field name="arch" type="xml">
                <form>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="dev">dev</label>
                        <div class="col-sm-10">
                            <field name="dev"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="days">days</label>
                        <div class="col-sm-10">
                            <field name="days"/>
                        </div>
                    </div>
                    
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window"
                id="metro_park_maintenance.month_plan_delta_info_act_window">
            <field name="name">month_plan_delta_info</field>
            <field name="res_model">metro_park_maintenance.month_plan_delta_info</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    