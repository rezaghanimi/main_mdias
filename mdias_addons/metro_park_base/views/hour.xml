
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_base.hour_list">
            <field name="name">小时</field>
            <field name="model">metro_park_base.hour</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="hour"/>
                    <field name="val"/>
                    
                </tree>
            </field>
        </record>

        
        <record model="ir.ui.view" id="metro_park_base.hour_form">
            <field name="name">小时</field>
            <field name="model">metro_park_base.hour</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="hour">hour</label>
                        <div class="col-sm-10">
                            <field name="hour"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="val">val</label>
                        <div class="col-sm-10">
                            <field name="val"/>
                        </div>
                    </div>
                    
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="metro_park_base.hour_act_window">
            <field name="name">小时</field>
            <field name="res_model">metro_park_base.hour</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem action="metro_park_base.hour_act_window" id="metro_park_base.hour_menu" name="小时" parent="metro_park_base.menu_root"/>
    </data>
</odoo>


    