
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_base.selections_list">
            <field name="name">selections list </field>
            <field name="model">metro_park_base.selections</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="value"/>
                    <field name="name"/>
                    
                </tree>
            </field>
        </record>

        
        <record model="ir.ui.view" id="metro_park_base.selections_form">
            <field name="name">selections form </field>
            <field name="model">metro_park_base.selections</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="value">value</label>
                        <div class="col-sm-10">
                            <field name="value"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="name">name</label>
                        <div class="col-sm-10">
                            <field name="name"/>
                        </div>
                    </div>
                    
                </form>
            </field>
        </record>

        
        <record model="ir.actions.act_window" id="metro_park_base.selections_act_window">
            <field name="name">selections</field>
            <field name="res_model">metro_park_base.selections</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    