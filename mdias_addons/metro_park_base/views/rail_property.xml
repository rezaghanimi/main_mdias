
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_base.rail_property_list">
            <field name="name">轨道属性</field>
            <field name="model">metro_park_base.rail_property</field>
            <field name="arch" type="xml">
                <tree js_class="fnt_table" options="{'height': 'full-240'}">
                    <field name="name"/>
                    <field name="remark"/>
                </tree>
            </field>
        </record>

        
        <record model="ir.ui.view" id="metro_park_base.rail_property_form">
            <field name="name">轨道属性</field>
            <field name="model">metro_park_base.rail_property</field>
            <field name="arch" type="xml">
                <form>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="name">name</label>
                        <div class="col-sm-10">
                            <field name="name"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="remark">remark</label>
                        <div class="col-sm-10">
                            <field name="remark"/>
                        </div>
                    </div>
                    
                </form>
            </field>
        </record>

        
        <record model="ir.actions.act_window" id="metro_park_base.rail_property_act_window">
            <field name="name">轨道属性</field>
            <field name="res_model">metro_park_base.rail_property</field>
            <field name="view_mode">tree,form</field>
        </record>

        
        <menuitem action="metro_park_base.rail_property_act_window"
                  id="metro_park_base.rail_property_menu"
                  name="轨道属性"
                  parent="metro_park_base.menu_root"
                  groups="category_sys_orbit_property"/>
    </data>
</odoo>
    