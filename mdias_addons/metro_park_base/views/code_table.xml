
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_base.code_table_list">
            <field name="name">码位表</field>
            <field name="model">metro_park_base.code_table</field>
            <field name="arch" type="xml">
                <tree js_class="fnt_table" options="{'height': 'full-270'}">
                    <field name="code"/>
                    <field name="location"/>
                    <field name="index"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="metro_park_base.code_table_form">
            <field name="name">码位表</field>
            <field name="model">metro_park_base.code_table</field>
            <field name="arch" type="xml">
                <form>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="code">code</label>
                        <div class="col-sm-10">
                            <field name="code"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="location">location</label>
                        <div class="col-sm-10">
                            <field name="location"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="index">index</label>
                        <div class="col-sm-10">
                            <field name="index"/>
                        </div>
                    </div>
                    
                </form>
            </field>
        </record>

        
        <record model="ir.actions.act_window" id="metro_park_base.code_table_act_window">
            <field name="name">码位表</field>
            <field name="res_model">metro_park_base.code_table</field>
            <field name="view_mode">tree,form</field>
        </record>

        
        <menuitem action="metro_park_base.code_table_act_window"
                  id="metro_park_base.code_table_menu"
                  name="码位表"
                  parent="metro_park_base.menu_root" groups="category_sys_code_for_table"/>
    </data>
</odoo>
