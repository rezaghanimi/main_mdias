
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_base.other_interlock_list">
            <field name="name">其它(联锁)</field>
            <field name="model">metro_park_base.other_interlock</field>
            <field name="arch" type="xml">
                <tree js_class="fnt_table" options="{'height': 'full-270'}">
                    <field name="name"/>
                    <field name="remark"/>
                </tree>
            </field>
        </record>

        
        <record model="ir.ui.view" id="metro_park_base.other_interlock_form">
            <field name="name">其它(联锁)</field>
            <field name="model">metro_park_base.other_interlock</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="name">name</label>
                        <div class="col-sm-10">
                            <field name="name"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="remark">remark</label>
                        <div class="col-sm-10">
                            <field name="remark"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        
        <record model="ir.actions.act_window" id="metro_park_base.other_interlock_act_window">
            <field name="name">其它(联锁)</field>
            <field name="res_model">metro_park_base.other_interlock</field>
            <field name="view_mode">tree,form</field>
        </record>

        
        <menuitem action="metro_park_base.other_interlock_act_window"
                  id="metro_park_base.other_interlock_menu"
                  name="其它(联锁)"
                  parent="metro_park_base.menu_root"
                  groups="category_sys_others_chain"/>
    </data>
</odoo>
    