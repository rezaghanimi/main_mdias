
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_base.line_list">
            <field name="name">线路</field>
            <field name="model">metro_park_base.line</field>
            <field name="arch" type="xml">
                <tree js_class="fnt_table" create="0" delete="0" edit="0" import="false" options="{'height':'full-340'}">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="metro_park_base.line_form">
            <field name="name">线路</field>
            <field name="model">metro_park_base.line</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="name">name</label>
                        <div class="col-sm-2">
                            <field name="name"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="code">code</label>
                        <div class="col-sm-2">
                            <field name="code"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="metro_park_base.line_act_window">
            <field name="name">线路管理</field>
            <field name="res_model">metro_park_base.line</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem action="metro_park_base.line_act_window"
                  id="metro_park_base.line_menu"
                  name="线别管理"
                  sequence="0"
                  parent="metro_park_base.menu_location_manage"
                  groups="group_sys_setting_position_line_manage"/>
    </data>
</odoo>
    