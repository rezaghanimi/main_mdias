
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_base.busy_board_list">
            <field name="name">占线板</field>
            <field name="model">metro_park_base.busy_board</field>
            <field name="arch" type="xml">
                <tree js_class="fnt_table" options="{'height': 'full-270'}">
                    <field name="icons"/>
                    <field name="rail"/>
                </tree>
            </field>
        </record>

        
        <record model="ir.ui.view" id="metro_park_base.busy_board_form">
            <field name="name">占线板</field>
            <field name="model">metro_park_base.busy_board</field>
            <field name="arch" type="xml">
                <form>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="icons">icons</label>
                        <div class="col-sm-10">
                            <field name="icons"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="rail">rail</label>
                        <div class="col-sm-10">
                            <field name="rail"/>
                        </div>
                    </div>
                    
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="metro_park_base.busy_board_act_window">
            <field name="name">占线板</field>
            <field name="res_model">metro_park_base.busy_board</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="metro_park_base.busy_board_act_window"
                  id="metro_park_base.busy_board_menu"
                  name="占线板管理"
                  parent="metro_park_base.menu_root"/>
    </data>
</odoo>
    