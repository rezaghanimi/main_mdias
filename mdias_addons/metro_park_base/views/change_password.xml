<odoo>
    <data>

        <t t-extend="base.ChangePassword">
            <t t-jquery=".o_form_view" t-operation="replace">
               <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="old_pwd">old_pwd</label>
                    <div class="col-sm-10">
                        <input type="password"
                               class="o_field_widget o_input"
                               name="old_pwd"
                               minlength="1"
                               autofocus="autofocus"
                               autocomplete="current-password"/>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"
                           for="new_password">new_password</label>
                    <div class="col-sm-10">
                        <input type="password"
                               class="o_field_widget o_input"
                               name="new_password"
                               minlength="1"
                               autocomplete="new-password"/>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"
                           for="confirm_pwd">confirm_pwd</label>
                    <div class="col-sm-10">
                        <input type="password"
                               class="o_field_widget o_input"
                               name="confirm_pwd"
                               minlength="1"
                               autocomplete="new-password"/>
                    </div>
                </div>

                <button type="button"
                        class="btn btn-primary oe_form_button">Change Password</button>
                <button type="button"
                        class="btn btn-secondary oe_form_button oe_form_button_cancel"
                        href="javascript:void(0)">Cancel</button>
            </t>
        </t>

    </data>
</odoo>