
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_base.time_table_data_list">
            <field name="name">时刻表数据</field>
            <field name="model">metro_park_base.time_table_data</field>
            <field name="arch" type="xml">
                <tree js_class="fnt_table"
                      editable="top"
                      options="{'height':'full-340'}"
                      create="0">
                    <field name="sequence"/>
                    <field name="train_no"/>
                    <field name="out_location"
                           options="{'no_create_edit': True,'no_open': True, 'no_create':True}" />
                    <field name="back_location"
                           options="{'no_create_edit': True,'no_open': True, 'no_create':True}" />
                    <field name="plan_out_time"
                           widget="datetime"
                           options="{'control_type': 'time'}" />
                    <field name="plan_in_time"
                           widget="datetime"
                           options="{'control_type': 'time'}" />
                    <field name="miles"/>
                    <field name="high_time_train"/>
                </tree>
            </field>
        </record>

        
        <record model="ir.ui.view" id="metro_park_base.time_table_data_form">
            <field name="name">时刻表数据</field>
            <field name="model">metro_park_base.time_table_data</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="sequence">sequence</label>
                        <div class="col-sm-10">
                            <field name="sequence"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="train_no">train_no</label>
                        <div class="col-sm-10">
                            <field name="train_no"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="out_location">out_location</label>
                        <div class="col-sm-10">
                            <field name="out_location"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="back_location">back_location</label>
                        <div class="col-sm-10">
                            <field name="back_location"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="plan_out_time">plan_out_time</label>
                        <div class="col-sm-10">
                            <field name="plan_out_time"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="plan_in_time">plan_in_time</label>
                        <div class="col-sm-10">
                            <field name="plan_in_time"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="miles">miles</label>
                        <div class="col-sm-10">
                            <field name="miles"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="high_time_train">high_time_train</label>
                        <div class="col-sm-10">
                            <field name="high_time_train"/>
                        </div>
                    </div>

                    <footer>
                        <button class="btn btn-info" text="确定" special="cancel" />
                    </footer>
                    
                </form>
            </field>
        </record>

        
        <record model="ir.actions.act_window" id="metro_park_base.time_table_data_act_window">
            <field name="name">时刻表数据</field>
            <field name="res_model">metro_park_base.time_table_data</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>

    