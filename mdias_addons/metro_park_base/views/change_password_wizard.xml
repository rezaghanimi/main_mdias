
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_base.change_password_wizard_list">
            <field name="name">change_password_wizard list </field>
            <field name="model">metro_park_base.change_password_wizard</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="confirm_password"/>
                    <field name="new_password"/>
                    <field name="login"/>
                    <field name="old_password"/>
                </tree>
            </field>
        </record>

        
        <record model="ir.ui.view" id="metro_park_base.change_password_wizard_form">
            <field name="name">change_password_wizard form </field>
            <field name="model">metro_park_base.change_password_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="confirm_password">confirm_password</label>
                        <div class="col-sm-10">
                            <field name="confirm_password"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="new_password">new_password</label>
                        <div class="col-sm-10">
                            <field name="new_password"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="login">login</label>
                        <div class="col-sm-10">
                            <field name="login"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="old_password">old_password</label>
                        <div class="col-sm-10">
                            <field name="old_password"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="metro_park_base.change_password_wizard_act_window">
            <field name="name">change_password_wizard</field>
            <field name="res_model">metro_park_base.change_password_wizard</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem action="metro_park_base.change_password_wizard_act_window"
                  id="metro_park_base.change_password_wizard_menu"
                  name="修改密码向导"
                  parent="metro_park_base.menu_root"/>
    </data>
</odoo>
    