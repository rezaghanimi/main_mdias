
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_base.ats_rail_location_map_list">
            <field name="name">ats_rail_location_map list </field>
            <field name="model">metro_park_base.ats_rail_location_map</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="index"/>
                    <field name="rail_sec_name"/>
                    <field name="location"/>
                </tree>
            </field>
        </record>

        
        <record model="ir.ui.view" id="metro_park_base.ats_rail_location_map_form">
            <field name="name">ats_rail_location_map form </field>
            <field name="model">metro_park_base.ats_rail_location_map</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="index">index</label>
                        <div class="col-sm-10">
                            <field name="index"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="rail_sec_name">rail_sec_name</label>
                        <div class="col-sm-10">
                            <field name="rail_sec_name"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="location">location</label>
                        <div class="col-sm-10">
                            <field name="location"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        
        <record model="ir.actions.act_window" id="metro_park_base.ats_rail_location_map_act_window">
            <field name="name">ats_rail_location_map</field>
            <field name="res_model">metro_park_base.ats_rail_location_map</field>
            <field name="view_mode">tree,form</field>
        </record>

        
        <menuitem action="metro_park_base.ats_rail_location_map_act_window"
                  id="metro_park_base.ats_rail_location_map_menu"
                  name="ats轨道位置对应表"
                  parent="metro_park_base.menu_root"/>
    </data>
</odoo>
    