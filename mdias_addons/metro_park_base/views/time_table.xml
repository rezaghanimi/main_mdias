<odoo>
    <data>

        <record model="ir.ui.view" id="metro_park_base.time_table_list">
            <field name="name">运行图管理</field>
            <field name="model">metro_park_base.time_table</field>
            <field name="arch" type="xml">
                <tree js_class="fnt_table" options="{'height':'full-340'}">
                    <field name="no" width="150"/>
                    <field name="update_time"/>
                    <field name="state"/>
                    <field name="button"
                           widget="template_widget"
                           options="{'template': 'time_table.buttons'}" width="350"/>
                    <button text="删除"
                            class="btn btn-sm btn-primary btn-small"
                            type="object"
                            name="del_time_table"
                            confirm="是否确认删除该记录?"
                    />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="metro_park_base.time_table_form">
            <field name="name">运行图管理</field>
            <field name="model">metro_park_base.time_table</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="no">no</label>
                        <div class="col-sm-10">
                            <field name="no"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="update_time">update_time</label>
                        <div class="col-sm-10">
                            <field name="update_time"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"
                               for="state">state</label>
                        <div class="col-sm-10">
                            <field name="state"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <!-- client action  -->
        <record id="time_table_manage_action" model="ir.actions.client">
            <field name="name">运行图管理</field>
            <field name="tag">time_table_action</field>
            <field name="target">main</field>
        </record>

        <record id="time_table_calendar_action" model="ir.actions.client">
            <field name="name">运行图日历</field>
            <field name="tag">time_table_calendar</field>
            <field name="target">current</field>
        </record>

    </data>
</odoo>


    