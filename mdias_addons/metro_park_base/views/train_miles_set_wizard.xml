
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_maintenance.train_miles_set_wizard_list">
            <field name="name">train_miles_set_wizard list </field>
            <field name="model">metro_park_maintenance.train_miles_set_wizard</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="train_dev_id"/>
                    <field name="miles"/>
                    <field name="remark"/>
                    
                </tree>
            </field>
        </record>

        
        <record model="ir.ui.view" id="metro_park_maintenance.train_miles_set_wizard_form">
            <field name="name">train_miles_set_wizard form </field>
            <field name="model">metro_park_maintenance.train_miles_set_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="train_dev_id">train_dev_id</label>
                        <div class="col-sm-10">
                            <field name="train_dev_id"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="miles">miles</label>
                        <div class="col-sm-10">
                            <field name="miles"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="remark">remark</label>
                        <div class="col-sm-10">
                            <field name="remark"/>
                        </div>
                    </div>
                    
                </form>
            </field>
        </record>

        
        <record model="ir.actions.act_window" id="metro_park_maintenance.train_miles_set_wizard_act_window">
            <field name="name">train_miles_set_wizard</field>
            <field name="res_model">metro_park_maintenance.train_miles_set_wizard</field>
            <field name="view_mode">tree,form</field>
        </record>

        
        <menuitem action="metro_park_maintenance.train_miles_set_wizard_act_window" id="metro_park_maintenance.train_miles_set_wizard_menu" name="车辆设备录入" parent="metro_park_maintenance.menu_root"/>
    </data>
</odoo>
    