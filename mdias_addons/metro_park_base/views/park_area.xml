
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_base.park_area_list">
            <field name="name">区域</field>
            <field name="model">metro_park_base.park_area</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="remark"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="metro_park_base.park_area_form">
            <field name="name">区域</field>
            <field name="model">metro_park_base.park_area</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="name">name</label>
                        <div class="col-sm-10">
                            <field name="name"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="remark">remark</label>
                        <div class="col-sm-10">
                            <field name="remark"/>
                        </div>
                    </div>
                    
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="metro_park_base.park_area_act_window">
            <field name="name">区域</field>
            <field name="res_model">metro_park_base.park_area</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="metro_park_base.park_area_act_window"
                  id="metro_park_base.park_area_menu"
                  name="库区"
                  parent="metro_park_base.menu_root"/>
    </data>
</odoo>
    