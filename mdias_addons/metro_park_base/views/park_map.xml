<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>

        <!-- client action, view park map -->
        <record id="park_map_action_client" model="ir.actions.client">
            <field name="name">站场图</field>
            <field name="tag">ParkMap</field>
            <field name="target">main</field>
        </record>
        
        <record model="ir.ui.view" id="metro_park_base.park_map_list">
            <field name="name">park_map list </field>
            <field name="model">metro_park_base.park_map</field>
            <field name="arch" type="xml">
                <tree js_class="fnt_table" options="{'height':'full-340'}">
                    <field name="name"/>
                    <field name="xml"/>
                    <field name="xml_name"/>
                    <field name="remark"/>
                    <button string="查看"
                            type="action"
                            name="%(park_map_action_client)d"
                            class="btn btn-sm btn-success" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="metro_park_base.park_map_form">
            <field name="name">park_map form </field>
            <field name="model">metro_park_base.park_map</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="name">name</label>
                        <div class="col-sm-3">
                            <field name="name"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="xml">xml</label>
                        <div class="col-sm-3">
                            <field name="xml" filename="xml_name"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="xml_name">xml_name</label>
                        <div class="col-sm-3">
                            <field name="xml_name" readonly="1"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="remark">备注</label>
                        <div class="col-sm-3">
                            <field name="remark"/>
                        </div>
                    </div>

                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="metro_park_base.park_map_act_window">
            <field name="name">站场图管理</field>
            <field name="res_model">metro_park_base.park_map</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="metro_park_base.park_map_act_window">
            <field name="name">站场图管理</field>
            <field name="res_model">metro_park_base.park_map</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem action="metro_park_base.park_map_act_window"
                  id="metro_park_base.park_map_menu"
                  sequence="2"
                  name="站场图"
                  parent="metro_park_base.menu_base_data_manage"
                  groups="group_battlefield_figure"/>
    </data>
</odoo>
    

    