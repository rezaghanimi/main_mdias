
<odoo>
    <data>
        
        <record model="ir.ui.view" id="metro_park_base.major_list">
            <field name="name">专业</field>
            <field name="model">metro_park_base.major</field>
            <field name="arch" type="xml">

                <tree js_class="fnt_table" options="{'height':'full-340'}" create="0">
                    <field name="name"/>
                    <field name="no"/>
                </tree>

            </field>
        </record>

        
        <record model="ir.ui.view" id="metro_park_base.major_form">
            <field name="name">专业</field>
            <field name="model">metro_park_base.major</field>
            <field name="arch" type="xml">
                <form>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="name">name</label>
                        <div class="col-sm-10">
                            <field name="name"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="no">no</label>
                        <div class="col-sm-10">
                            <field name="no"/>
                        </div>
                    </div>
                    
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="metro_park_base.major_act_window">
            <field name="name">设备专业</field>
            <field name="res_model">metro_park_base.major</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="metro_park_base.major_act_window"
                  id="metro_park_base.major_menu"
                  name="设备专业"
                  sequence='1'
                  parent="metro_park_base.menu_maintenance_data_manage"
                  groups="group_base_equipment_professional"/>


    </data>
</odoo>
    