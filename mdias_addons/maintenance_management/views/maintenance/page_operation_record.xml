<odoo>
    <data>

        <record model="ir.ui.view" id="page_operation_record_tree_id">
            <field name="name">页面操作记录</field>
            <field name="model">maintenance_management.page_operation_record</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="name" width="150"/>
                    <field name="create_date" width="150" string="记录时间"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="page_operation_record_form_id">
            <field name="name">页面操作记录</field>
            <field name="model">maintenance_management.page_operation_record</field>
            <field name="arch" type="xml">
                <form>
                    <field name="name" width="150"/>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="page_operation_record_act_id">
            <field name="name">页面操作记录</field>
            <field name="res_model">maintenance_management.page_operation_record</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="page_operation_record_act_id"
                  id="page_operation_record_menu_id"
                  name="页面操作记录" parent="maintenance_system_set_menu"
                  groups="group_maintenance_page_action_record"/>

    </data>
</odoo>