<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_wechat_department_tree" model="ir.ui.view">
            <field name="name">企业微信部门列表</field>
            <field name="model">funenc.wechat.department</field>
            <field name="arch" type="xml">
                <tree import="false"
                      create="0"
                      edit="0"
                      delete="0"
                      js_class="left_department_tree"
                      options="{'height': 'full-290'}">
                    <field name="name" width="400"/>
                    <field name="account_id" string="企业" />
                    <field name="wx_id"/>
                    <field name="parent_id" width="200"/>
                    <field name="properties" width="300" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="view_wechat_department_form" model="ir.ui.view">
            <field name="name">企业微信部门详情</field>
            <field name="model">funenc.wechat.department</field>
            <field name="arch" type="xml">
                <form create="0" delete="0" edit="1" >

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="account_id">account_id</label>
                        <div class="col-sm-3">
                            <field name="account_id"/>
                        </div>
                        <label class="col-sm-2 col-form-label" for="parent_id">parent_id</label>
                        <div class="col-sm-3">
                            <field name="parent_id"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="name">name</label>
                        <div class="col-sm-3">
                            <field name="name"/>
                        </div>
                        <label class="col-sm-2 col-form-label" for="wx_id">wx_id</label>
                        <div class="col-sm-3">
                            <field name="wx_id"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="properties">properties</label>
                        <div class="col-sm-6">
                            <field name="properties"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="wx_id">users</label>
                        <div class="col-sm-6">
                            <field name="users">
                                <tree js_class="fnt_table" class="noOpen">
                                    <field name="name"/>
                                    <field name="wx_userid"/>
                                    <field name="mobile"/>
                                    <field name="email"/>
                                    <field name="user_state"/>
                               </tree>
                            </field>
                        </div>
                    </div>

                </form>
            </field>
        </record>
    </data>
</odoo>